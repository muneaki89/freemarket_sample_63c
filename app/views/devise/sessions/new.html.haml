.signin-wrapper
  = render partial: 'layouts/signin_registration_header.html'
  .container
    .container__login-panel
      .container__login-panel__registration
        %p アカウントをお持ちでない方はこちら
        = link_to "新規会員登録", new_user_registration_path, class: "registaration__btn"
      .container__login-panel__signin
        = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
          = f.email_field :email, placeholder: "メールアドレス", class: "container__login-panel__signin__group input-text"
          = f.password_field :password, autocomplete: "current-password", placeholder: "パスワード", class: "container__login-panel__signin__group input-text"
          = f.submit "ログイン", class: "container__login-panel__signin__group submit-btn"
        = link_to 'パスワードをお忘れの方', '#', class: "container__login-panel__signin__group"
  = render partial: 'layouts/signin_registration_footer.html'