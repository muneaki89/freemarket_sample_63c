= render partial: 'layouts/signin_registration_header.html'
.container
  .container__login-panel
    .container__login-panel__registration
      %p アカウントをお持ちでない方はこちら
      = link_to "新規会員登録", new_user_registration_path, class: "registaration__btn"
    
    // 入力フォーム
    = form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "container__login-panel__signin"}) do |f|
      = f.email_field :email, class: "container__login-panel__signin__group input-text", autocomplete: "email", placeholder: "メールアドレス"
      = f.password_field :password, class: "container__login-panel__signin__group input-text", autocomplete: "current_password", placeholder: "パスワード"

      = button_tag "ログイン", type: "submit", class: "container__login-panel__signin__group submit-btn"
      
      // TODO パスワード再設定の処理を作成
      = link_to 'パスワードをお忘れの方', '#', class: "container__login-panel__signin__group"

= render partial: 'layouts/signin_registration_footer.html'